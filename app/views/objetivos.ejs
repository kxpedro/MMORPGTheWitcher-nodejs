<div class="col-md-12" id="objetivos">					
	<h4>Objetivos</h4>	
	<br>
	<table class="table table-hover">	
		<%if(acoes.length == 0){%>
			<tr>
				<td> Faça alguma Ordem! </td>
			</tr>		
		<%}else{%>	
			<%for(var i = 0; i < acoes.length; i++){%>
				<%
					var txt_acao = '';			
					switch(parseInt(acoes[i].acao)){
						case 1: txt_acao = 'Realizar Comércio'; break;
						case 2: txt_acao = 'Fazer Contrato Bruxo'; break;
						case 3: txt_acao = 'Treinar Exército'; break;
						case 4: txt_acao = 'Recrutar General'; break;
						case 5: txt_acao = 'Recrutar Arqueiro'; break;
						case 6: txt_acao = 'Recrutar Guerreiro'; break;
						case 7: txt_acao = 'Ensinar Magia'; break;
						case 8: txt_acao = 'Enforcar Aldeão'; break;
					}
					var date = new Date();
					var momento_atual = date.getTime();
					var segundos_restantes = Math.round((acoes[i].acao_termina_em - momento_atual) / 1000);					
				%>
				<tr>			
					<td><%=acoes[i].quantidade%></td>
					<td><%=txt_acao%> programado.</td>
					<td>Restam  <span class="tempo_restante"><%=segundos_restantes%></span> segundos</td>				 
					<td><a class="btn btn-danger" id="revogar_ordem" href="/revogar_ordem?id_acao=<%=acoes[i]._id%>">Revogar Ordem</a></td>			
				</tr>
			<%}%>								
		<%}%>
	</table>
</div>